import java.awt.*;
import javax.swing.*;

public class Background extends JPanel{
  public Image pic;
	
  private int level;
  
  private final int IMAGEWIDTH = 1280; //constants
  private final int IMAGEHEIGHT = 960;
  private final int SPEED = 1;
  
  public Background(){
    level = 0;
  }
  
  public void update(){ //ryan calls this method
    level += SPEED;
    if(level > IMAGEHEIGHT)
      level = 0;
    repaint();
  }
  
  public void paintComponent(Graphics g){
    super.paintComponent(g);
    render(g);
  }
  
  public void render(Graphics g){
	pic = Toolkit.getDefaultToolkit().getImage("backwlines.PNG");
	g.drawImage(pic, 0, 0, IMAGEWIDTH, IMAGEHEIGHT-level, 0, level, IMAGEWIDTH, IMAGEHEIGHT, this);
	g.drawImage(pic, 0, IMAGEHEIGHT-level, IMAGEWIDTH, IMAGEHEIGHT, 0, 0, IMAGEWIDTH, level, this);
  }
}
